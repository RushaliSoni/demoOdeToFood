
@model  demoOdeToFood.core.Restaurant

    <div class="panel panel-default">
        <div class="panel-heading">
             <h3>@Model.Name</h3>
        </div>
        <div class="panel-body">
            <span><b>Location</b>: @Model.Location </span><br/>
            @*<span>WebSite: @Model.WebSite</span>*@
            <span><b>Programming Languages</b>: @Model.cuisine</span>
        </div>
        <div class="panel-footer">
            <a class="btn btn-lg"
               asp-page="./detail"
               asp-route-restaurantId="@Model.id">Detail
                @*<button type="button" class="btn btn-info">Detail</button>*@
            </a>


            @*<i class="glyphicon glyphicon-zoom-in"></i>*@

            <a class="btn btn-lg"
               asp-page="./Edit"
               role="button"
               asp-route-restaurantId="@Model.id">Edit


                @*<i class="glyphicon glyphicon-edit"></i>*@
            </a>
            @*<button type="button" class="btn btn-info">Edit</button>*@


            <a class="btn btn-lg"
               asp-page="./delete"
               asp-route-restaurantId="@Model.id">Delete
                @*<button type="button" class="btn btn-info">Delete</button>*@

                @*<i class="glyphicon glyphicon-trash"></i>*@
            </a>



        </div>
</div>